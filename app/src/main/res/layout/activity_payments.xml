<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".Payments">

  <ImageView
      android:layout_height="300sp"
      app:srcCompat="@android:color/transparent"
      android:id="@+id/qrCode"
      android:layout_width="300sp"
      android:layout_marginTop="10dp"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/payReceiveForwardButton" />

  <TextView
      android:text="Enter The Amount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#FFFFFF"
      android:textSize="30sp"
      android:id="@+id/enterAmountText"
      android:layout_marginTop="29dp"
      android:layout_centerHorizontal="true" />

  <EditText
      android:layout_width="match_parent"
      android:inputType="number"
      android:ems="10"
      android:id="@+id/editAmount"
      android:cursorVisible="false"
      android:textColor="#ffffff"
      android:textSize="20sp"
      android:layout_height="65dp"
      android:gravity="center_horizontal"
      android:layout_marginBottom="20dp"
      android:layout_below="@+id/enterAmountText"
      android:layout_alignParentStart="true" />

  <Button
      android:id="@+id/payReceiveForwardButton"
      android:layout_height="60dp"
      android:layout_width="150dp"
      android:text="Request"
      android:layout_marginTop="20dp"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/editAmount"/>

</RelativeLayout>